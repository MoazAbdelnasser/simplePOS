<?xml version="1.0" ?>
<odoo>
    <data>
        <!-- Hide Un-necessary fields to form View -->
        <record id="account_move_form_view_inherit_moaz" model="ir.ui.view">
            <field name="name">account.move.inherit.moaz</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='auto_post']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='to_check']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='campaign_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='medium_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='source_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- hide buttons not needeed -->
                <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <!--                <xpath expr="//header/button[@name='action_register_payment']" position="after">-->
                <!--                    <button name="action_view_picking"-->
                <!--                            string="Receive Products" class="oe_highlight" type="object"-->
                <!--                            attrs="{'invisible': ['|', '|' , ('is_shipped', '=', True), ('state','not in', ('purchase','done')), ('incoming_picking_count', '=', 0)]}"-->
                <!--                            data-hotkey="y" groups="stock.group_stock_user"/>-->
                <!--                </xpath>-->
            </field>
        </record>
        <!-- Customize Filters -->
        <record id="account_invoice_filter_inherit_moaz" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="name">account.move.filter_inherit_moaz</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='to_check']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
