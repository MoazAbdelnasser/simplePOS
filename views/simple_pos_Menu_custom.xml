<?xml version="1.0" ?>
<odoo>
    <data>
        <!-- Customize existing Menus -->
        <record id="account.menu_finance_receivables" model="ir.ui.menu">
            <field name="name">Sales</field>
        </record>
        <record id="account.menu_finance_payables" model="ir.ui.menu">
            <field name="name">Purchages</field>
        </record>
        <record id="account.menu_action_move_in_invoice_type" model="ir.ui.menu">
            <field name="name">Purchage Invoices</field>
        </record>
        <!-- Hide none necessary Menus -->
        <record id="purchase.menu_purchase_rfq" model="ir.ui.menu">
            <field name="active" eval="False"></field>
        </record>
        <record id="sale.menu_sale_quotations" model="ir.ui.menu">
            <field name="active" eval="False"></field>
        </record>
        <record id="sale.menu_sale_order_invoice" model="ir.ui.menu">
            <field name="active" eval="False"></field>
        </record>
        <record id="sale.menu_sale_order_upselling" model="ir.ui.menu">
            <field name="active" eval="False"></field>
        </record>
        <record id="account.product_product_menu_purchasable" model="ir.ui.menu">
            <field name="active" eval="False"></field>
        </record>
        <!-- Deal with Products -->
        <!-- Create new Menu called Products -->
        <menuitem id="simple_pos_menu_products" name="Products" parent="account.menu_finance"/>
        <record id="account.product_product_menu_sellable" model="ir.ui.menu">
            <field name="parent_id" ref="simple_pos_menu_products"></field>
        </record>
        <!-- Reports Meus -->
        <menuitem id="simple_pos_customer_statement" name="Customer Statement"
                  sequence="2"
                  parent="account.menu_finance_reports"/>
        <menuitem id="simple_pos_vendor_statement" name="Vendor Statement"
                  sequence="3"
                  parent="account.menu_finance_reports"/>
        <menuitem id="simple_pos_owner_statement" name="Money Transaction Report"
                  parent="account.menu_finance_reports"/>

    </data>
</odoo>
